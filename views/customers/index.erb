

<h1>Customers</h1>

<form  action="/customers/search" method="post">
  <input type="search" name="input" placeholder="name">
  <input type="submit" name="button" value="search">
</form>


<form action="/customers/new" method="GET">
  <input class="btn btn--action" type='submit' value="Add New Customer">
</form>
<br>
<br>
<br>
<table class="search_customer">
  <tr  >
    <th>First Name</th>
    <th>Last Name</th>
    <th>Rental</th>
    <th></th>
    <th></th>
  </tr>



<% @customers.each do |customer| %>


  <tr>
    <td><%= customer.first_name %></td>
    <td><%= customer.last_name %></td>
  <td>  <% for rental in customer.rental_items %>
    <%= rental.manufacturer %> <%= rental.name %>  </td>
    <% end %>
    <td>
      <form  action="/customers/<%=customer.id %>/edit" method="get">
        <input type="submit" name="edit" value="edit">
      </form>
    </td>
    <td>
      <form action="/customers/ <%= customer.id %>/delete" method="POST">
        <input class="btn btn--danger" type="submit" value="delete" />
      </form>
    </td>
  </tr>
  <% end %>
</table>

<h1>Edit Customer</h1>

<form action="/customers/<%=@customer.id%>/edit" method="POST">
  <label for="first_name">First Name:</label>
  <input type="text" id="first_name" name="first_name" value="<%=@customer.first_name%>">

  <label for="last_name">Last Name:</label>
  <input type="text" id="last_name" name="last_name" value="<%=@customer.last_name%>">



  <input type="submit"  value="save">
</form>
<!-- this form is performing the POST method (in customer controller) on customers/:id/edit -->

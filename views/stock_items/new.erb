<h1>Add New Stock</h1>



<form action="/stock" method="POST">

  <label for="name">Name:</label>
  <input type="text" id="name" name="name">

  <label for="image">Image:</label>
  <input type="text" id="image" name="image">

  <label for="manufacturer">Manufacturer:
  <select id="manufacturer" name="manufacturer">
    <option value="manufacturer" selected disabled>Select a manufacturer</option>
    <% @manufacturer.each do |item| %>
    <option value="<%= item%>"><%= item %></option>
    <% end %>
  </select>
  </label>

  <label for="type">Type:

  <select id="type" name="type">
    <option value="type" selected disabled>Select a type</option>
    <% @type.each do |item| %>
    <option value="<%= item%>"><%= item %></option>
    <% end %>
  </select>
  </label>



  <label for="category">Category CC:</label>
  <input type="number" id="category" name="category_cc">

  <label for="max_speed">Max Speed:</label>
  <input type="number" id="max_speed" name="max_speed_mph">

  <label for="cost">Cost per Week:</label>
  <input type="number" id="cost" name="cost_per_week">

  <input type="hidden" name="rented" value="t">



  <hr />

  <input type="submit" value="Add Stock Item">


</form>
